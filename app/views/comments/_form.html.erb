<%if user_signed_in? %>
  <%= form_for ([@post, @post.comments.build]) do |f| %>
    <p>
      <%=f.label :name%><br>
      <%= f.text_field :name%>
    </p>

    <p>
      <%=f.label :body%><br>
      <%=f.text_area :body%>
    </p>
    <br>
    <%= f.submit %>
  <% end %>
<% end %>
<%if !user_signed_in? %>
<p> Please Sign In for Comment </p>
<% end %>